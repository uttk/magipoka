{
  "compilerOptions": {
    "rootDir": "src",
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.d.ts", "**/dist/**", "**/tests/**", "**/*.test.ts"]
}
